<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farvel.farvel_akne.TakePicFragment"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textAnsigt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANSIGT"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
<LinearLayout
    android:id="@+id/AnsigtLayout"
    android:background="@drawable/customborder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:padding="10dp"
    android:weightSum="4"
    >
    <ImageView

        android:background="@drawable/ic_camera"
        android:layout_weight="1"
        android:id="@+id/image_view_take_pic_face0"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"/>

    <ImageView

        android:layout_weight="1"
        android:id="@+id/image_view_take_pic_face1"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"

        android:layout_marginLeft="5dp"

        android:background="@drawable/ic_camera"></ImageView>

    <ImageView
        android:background="@drawable/ic_camera"
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/image_view_take_pic_face2"
        android:layout_marginLeft="5dp"/>
    <ImageView
        android:layout_weight="1"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/image_view_take_pic_face3"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/ic_camera"></ImageView>
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textBryst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRYST"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        >

        <ImageView
            android:id="@+id/image_view_take_pic_bryst0"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@drawable/ic_camera"
             />


    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textRyggen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RYGGEN"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/customborder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_weight="1"
            android:id="@+id/image_view_take_pic_ryg0"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_camera"
           />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/buttonpic"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Take Picture(Send ind)"
        />

        <Button
            android:id="@+id/sendBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonpic"
            android:layout_centerHorizontal="true"
            android:text="Button" />
    </RelativeLayout>
</LinearLayout>
